doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
        script(src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js")
        link(rel="stylesheet" href="../css/index.css")
        link(rel="stylesheet" href="../css/style.css")
        title Proyecto Programacion Backend CoderHouse
    body 
        div(class="container mt-3")
            div(class="jumbotron")
                h3(style="color: blue;") Centro de Mensajes
                div(id="porcentaje")
                br
                form()
                    div(class="form-group")
                        label(for="firstname")
                            b firstname
                        input(id="firstname" class="form-control" name="firstname" type="text" required)
                        label(for="lastname")
                            b lastname
                        input(id="lastname" class="form-control" name="lastname" type="text" required)
                        label(for="email")
                            b email
                        input(id="email" class="form-control" name="email" type="email" required)
                        label(for="edad")
                            b edad
                        input(id="edad" class="form-control" name="edad" type="text" required)
                        label(for="alias")
                            b alias
                        input(id="alias" class="form-control" name="alias" type="text" required)
                        label(for="avatar")
                            b avatar
                        input(id="avatar" class="form-control" name="avatar" type="text" required)
                    div(class="form-group mt-3")
                        label(for="Mensajes")
                            b Mensajes
                        textarea(id="contenidoMensaje" name="mensaje", cols="3" class="form-control") 
                    button(class="btn btn-success mt-3 mb-5 btn-block" onclick="enviarMensaje()") Enviar
                hr
                div(id="historialChat")                
                
script(src="/socket.io/socket.io.js")
script(src="https://cdn.jsdelivr.net/npm/normalizr@3.6.1/dist/normalizr.browser.min.js")
script(src="/js/main.js")
